---
layout: 'base.njk'
---

<main>
   <article class="main-article">
      <div class="container container--narrow flow">

         <h1 class="article-title">
            {{ title }}
         </h1>
         <figure class="main-article__figure">
            {# <img src="{{ image }}" alt="{{ imageAlt }}"> #}
            <img src="{{imageSmall}}" srcset="{{imageMedium}} 1000w, {{imageLarge}} 2000w" alt="{{imageAlt}}">

            <figcaption>
               {{ content | safe }}
            </figcaption>
         </figure>

      </div>
   </article>
</main>